-- 1. Se desea saber los cursos aprobados por el estudiante ‘Juan Marcos Castillo’

SELECT cursoNombre
FROM cursos
INNER JOIN cursoMatricula
ON cursos.cursoNum = cursoMatricula.cursoNum
INNER JOIN moduloMatricula
ON cursoMatricula.cursoNum = moduloMatricula.cursoNum
INNER JOIN moduloCalificacion
ON moduloMatricula.moduloNum = moduloCalificacion.moduloNum
WHERE alumnoNum = (
  SELECT alumnoNum
  FROM alumnos
  WHERE alumnoNombre = 'Juan Marcos Castillo'
)
AND calificacionNum >= 70;

-- 2. Mostrar los profesores que ha impartido el curso de Matemáticas
SELECT personalNombre
FROM profesores
INNER JOIN imparte
ON profesores.personalNum = imparte.personalNum
INNER JOIN modulos
ON imparte.moduloNum = modulos.moduloNum
WHERE moduloNombre = 'Matemáticas';

-- 3. Mostrar los cursos del Departamento de ingeniería en sistemas
SELECT cursoNombre
FROM cursos
INNER JOIN departamentos
ON cursos.deptNombre = departamentos.deptNombre
WHERE deptNombre = 'Departamento de Ingeniería en Sistemas';

-- 4. Mostrar los nombres de los Alumnos que se matricularon en un curso a partir de ‘2022-07-01’
SELECT alumnoNombre
FROM alumnos
INNER JOIN cursoMatricula
ON alumnos.alumnoNum = cursoMatricula.alumnoNum
WHERE matriculaFecha >= '2022-07-01';

